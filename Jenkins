pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t docker191294/kube .'
      }
    }
    stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push docker191294/kube'
	}
      }
    }
    #stage('Deleting the old builds and services') {
	    #agent any
	    #steps{
		    #sh 'kubectl delete deployments kube'
		    #sh 'kubectl delete services kube' 
		    }
		 }
	
	stage('Deploying New Build To Kubernetes') {
	    agent any
	    steps{   
	            sh 'docker pull docker191294/kube'
	    	    sh 'kubectl create deployment kube --image docker191294/kube'
		    sh 'kubectl set image deployments/kube kube=docker191294/kube'
		    sh 'kubectl create service nodeport kube --tcp=80:80'
	    }
      }
  }
}
